<div id="reset-password-user">
  <div class="reset-user-box">
    <form class="form-reset-user" {{on "submit" this.onSubmit}}>
      <div class="auth-form-input">
        <label for="password">Password</label>
        <Input
          class="form-control"
          id="password"
          name="password"
          @type={{this.fieldType}}
          @value={{this.password}}
          required={{true}}
          {{on "input" this.resetErrors}}
        />
        <button
          id="show-password-btn"
          type="button"
          aria-label={{if this.showingPassword "Hide password" "Show password"}}
          {{on "click" this.toggleShowingPassword}}
        >
          {{#if this.showingPassword}}
            <i class="fas fa-eye-slash"></i>
          {{else}}
            <i class="fas fa-eye"></i>
          {{/if}}
        </button>
      </div>

      <div class="auth-form-input">
        <label for="confirmPassword">Confirm Password</label>
        <Input
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          @type={{this.fieldType}}
          @value={{this.confirmPassword}}
          required={{true}}
          {{on "input" this.resetErrors}}
        />
      </div>

      {{#if this.matchError}}
        <p class="error-message">Passwords don't match.</p>
      {{/if}}

      {{#if this.missingRequiredFields}}
        <p class="error-message">Please fill in all required fields.</p>
      {{/if}}

      <div class="button-row">
        <button class="action_button" type="submit">Reset</button>
        <button
          class="action_button cancel-button"
          type="button"
          {{on "click" this.cancelReset}}
        >
          Cancel
        </button>
      </div>
    </form>

    {{#if this.resetError}}
      <p class="error-message">{{this.resetError}}</p>
    {{/if}}

    {{#each this.apiErrors as |error|}}
      <p class="error-message">{{error}}</p>
    {{/each}}
  </div>
</div>
