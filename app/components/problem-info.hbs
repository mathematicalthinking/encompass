<header class='info-header'>
  {{#if @isEditing}}
    <span class='top-left-icon'>
      {{public-private this.privacySettingIcon}}
    </span>
    <div class='select-container'>
      <select
        name='privacy-settings'
        id='privacy-select'
        {{on 'change' this.changePrivacy}}
      >
        <option
          value='E'
          selected={{is-equal @problem.privacySetting 'E'}}
        >Everyone</option>
        <option value='O' selected={{is-equal @problem.privacySetting 'O'}}>My
          Org</option>
        <option value='M' selected={{is-equal @problem.privacySetting 'M'}}>Just
          Me</option>
      </select>
    </div>
  {{else}}
    <span
      class='top-left-icon simptip-position-right simptip-smooth'
      data-tooltip={{privacy-setting @problem.privacySetting}}
    >
      {{public-private @problem.privacySetting}}
    </span>
  {{/if}}
  <span class='remove-icon' {{on 'click' this.hideInfo}}>
    <i class='fas fa-times'></i>
  </span>
</header>

<div class='side-info-menu'>
  <section class='info-details'>
    <div class='info-main'>
      <div class='heading'>
        {{#if @isEditing}}
          <Input
            name='title'
            id='title'
            @type='text'
            @value={{this.problemName}}
          />
        {{else}}
          {{make-html-safe @problem.title}}
        {{/if}}
      </div>
      <div class='subheading date'>{{format-date
          @problem.createDate
          'MM/DD/YYYY'
        }}</div>
      <div class='subheading'><LinkTo
          @route='metrics.problem'
          @model={{@problem}}
        >See Reports</LinkTo></div>
    </div>
    <div class='info-menu'>
      <button
        class='tab-link general {{if this.showGeneral "active-btn"}}'
        type='button'
        {{on 'click' this.toggleGeneral}}
      >General</button>
      <button
        class='tab-link categories {{if this.showCats "active-btn"}}'
        type='button'
        {{on 'click' this.toggleCats}}
      >Categories</button>
      <button
        class='tab-link additional {{if this.showAdditional "active-btn"}}'
        type='button'
        {{on 'click' this.toggleAdditional}}
      >Additional</button>
      <button
        class='tab-link legal {{if this.showLegal "active-btn"}}'
        type='button'
        {{on 'click' this.toggleLegal}}
      >Legal</button>
    </div>
    <div class='info-content'>
      {{#if this.showGeneral}}
        <p class='info-content-label'>Problem Statement</p>
        <div class='info-content-block statement large-content'>
          {{#if @isEditing}}
            <QuillContainer
              @onEditorChange={{this.updateQuillText}}
              @startingText={{@problem.text}}
            />
          {{else}}
            {{make-html-safe @problem.text}}
          {{/if}}
        </div>
        {{#if @isEditing}}
          <p class='info-content-label'>Author</p>
          <div class='info-content-block author'>
            {{#if @problem.author}}
              <div class='input-container'>
                <Input
                  name='author'
                  id='author'
                  @type='text'
                  @value={{this.author}}
                />
              </div>
            {{else}}
              <div class='input-container'>
                <Input
                  name='author'
                  id='author'
                  @type='text'
                  placeholder='Add author'
                  @value={{this.author}}
                />
              </div>
            {{/if}}
          </div>
        {{else}}
          {{#if @problem.author}}
            <p class='info-content-label'>Author</p>
            <div class='info-content-block author'>
              {{@problem.author}}
            </div>
          {{/if}}
        {{/if}}
        {{#if @problem.organization}}
          {{#if this.user.isAdmin}}
            <p class='info-content-label'>Organization</p>
            <div class='info-content-block org'>
              {{#if @problem.organization}}
                {{@problem.organization.name}}
              {{/if}}
            </div>
          {{/if}}
        {{/if}}
        <p class='info-content-label'>Problem Status</p>
        <div class='info-content-block'>
          {{#if @isEditing}}
            {{#if this.user.isTeacher}}
              <svg height='20' width='20'>
                <circle
                  cx='10'
                  cy='15'
                  r='5'
                  fill={{this.statusIconFill}}
                ></circle>
              </svg>
              <span class='status-text'>
                {{@problem.status}}
              </span>
            {{else}}
              <svg height='20' width='20'>
                <circle
                  cx='10'
                  cy='15'
                  r='5'
                  fill={{this.statusIconFill}}
                ></circle>
              </svg>
              <MySelect
                @cannotBeNull={{true}}
                @selectedValue={{@problem.status}}
                @content={{this.problemStatusOptions}}
                @action={{this.updateProblemStatus}}
                @isDisabled={{this.isReadOnly}}
              />
            {{/if}}
          {{else}}
            <svg height='20' width='20'>
              <circle
                cx='10'
                cy='15'
                r='5'
                fill={{this.statusIconFill}}
              ></circle>
            </svg>
            <span class='status-text'>
              {{@problem.status}}
            </span>
            {{#if (is-equal @problem.status 'flagged')}}
              {{#if this.showFlagReason}}
                <span
                  class='show-reason'
                  {{on 'click' this.toggleShowFlagReason}}
                >Hide</span>
                <div class='flag-reason'>
                  <p class='reason'><strong>Reason:</strong>
                    {{@problem.flagReason.reason}}</p>
                  <p class='details'>By
                    <LinkTo
                      @route='users.user'
                      @model={{@flaggedBy.id}}
                    >{{@flaggedBy.username}}</LinkTo>
                    on
                    {{format-date @flaggedDate 'MMM Do YYYY'}}</p>
                </div>
              {{else}}
                <span
                  class='show-reason'
                  {{on 'click' this.toggleShowFlagReason}}
                >Why?</span>
              {{/if}}
            {{/if}}
          {{/if}}
        </div>
      {{/if}}

      {{#if this.showCats}}
        <p class='info-content-label'>Problem Categories</p>
        <div class='info-content-block categories'>
          {{#if @isEditing}}
            {{#if @problem.categories}}
              <ul>
                {{#each @problem.categories as |category|}}
                  <li class='category-item'>
                    <a
                      href='{{category.url}}'
                      target='_blank'
                      rel='noopener noreferrer'
                    >{{category.identifier}}</a>
                    <button
                      class='remove-cat'
                      type='button'
                      {{on 'click' this.removeCategory category}}
                    ><i class='far fa-times-circle'></i></button>
                    <p class='category-description'>{{category.description}}</p>
                  </li>
                {{/each}}
              </ul>
              {{#unless this.showCategories}}
                <div class='button-row-list'>
                  <button
                    class='cancel-button'
                    type='button'
                    {{on 'click' this.toggleCategories}}
                  >Add Categories</button>
                </div>
              {{/unless}}
              {{#if this.showCategories}}
                <div class='button-row-list'>
                  <button
                    class='cancel-button'
                    type='button'
                    {{on 'click' this.toggleCategories}}
                  >Hide Categories</button>
                </div>
                <CategoriesMenu
                  @categories={{this.categoryTree}}
                  @addCategories={{this.addCategories}}
                />
              {{/if}}
            {{else}}
              {{#unless this.showCategories}}
                <div class='button-row'>
                  <button
                    class='cancel-button'
                    type='button'
                    {{on 'click' this.toggleCategories}}
                  >Add Categories</button>
                </div>
              {{/unless}}
              {{#if this.showCategories}}
                <div class='button-row'>
                  <button
                    class='cancel-button'
                    type='button'
                    {{on 'click' this.toggleCategories}}
                  >Hide Categories</button>
                </div>
                {{#if this.categoryTree}}
                  <CategoriesMenu
                    @categories={{this.categoryTree}}
                    @addCategories={{this.addCategories}}
                  />
                {{/if}}
              {{/if}}
            {{/if}}
          {{else}}
            {{#if @problem.categories}}
              <ul>
                {{#each @problem.categories as |category|}}
                  <li class='category-item'>
                    <a
                      href='{{category.url}}'
                      target='_blank'
                      rel='noopener noreferrer'
                    >{{category.identifier}}</a>
                    <p class='category-description'>{{category.description}}</p>
                  </li>
                {{/each}}
              </ul>
            {{else}}
              No Problem Categories
            {{/if}}
          {{/if}}
        </div>
        <p class='info-content-label'>Problem Keywords</p>
        <div class='info-content-block keywords'>
          {{#if @isEditing}}
            <SelectizeInput
              @inputId='select-edit-keywords'
              @onItemAdd={{this.updateKeywords}}
              @onItemRemove={{this.updateKeywords}}
              @maxItems={{5}}
              @create={{true}}
              @createFilter={{this.keywordFilter}}
              @persist={{false}}
              @initialItems={{@problem.keywords}}
              @initialOptions={{this.keywordSelectOptions}}
              @labelField='label'
              @valueField='value'
            />
          {{else}}
            {{#if @problem.keywords}}
              <ul>
                {{#each @problem.keywords as |keyword|}}
                  <li>
                    {{keyword}}
                  </li>
                {{/each}}
              </ul>
            {{else}}
              No Problem Keywords
            {{/if}}
          {{/if}}

        </div>
      {{/if}}

      {{#if this.showAdditional}}
        <p class='info-content-label'>Additional Info</p>
        {{#if @isEditing}}
          <div class='info-content-block additional'>
            <div class='input-container'>
              <Textarea
                class='additional-info-area'
                @value={{this.additionalInfo}}
                rows='4'
                placeholder='Additional info...'
              />
              <Input
                id='additionalInfo'
                @type='hidden'
                @value={{this.additionalInfo}}
              />
            </div>
          </div>
        {{else}}
          <div class='info-content-block large-content additional'>
            {{#if @problem.additionalInfo}}
              {{make-html-safe @problem.additionalInfo}}
            {{else}}
              No Additional Info
            {{/if}}
          </div>
        {{/if}}
        <p class='info-content-label'>Additional Image</p>
        <div class='info-content-block image'>
          {{#if @problem.image}}
            <button
              type='button'
              class='image-toggle-btn'
              {{on 'click' this.toggleImageSize}}
            >
              <img
                src={{@problem.image.imageData}}
                alt='Additional Image'
                class='additional-image {{if this.isWide "wide"}}'
              />
            </button>
          {{else}}
            {{#unless @isEditing}}
              No Additional Image
            {{/unless}}
          {{/if}}
          {{#if @isEditing}}
            {{#if @problem.image}}
              <button
                class='edit-image-btn'
                type='button'
                {{on 'click' this.deleteImage}}
              >Delete</button>
            {{else}}
              <div class='input-container' id='image-upload'>
                <ImageUpload
                  @filesToBeUploaded={{this.filesToBeUploaded}}
                  @hideSubmit={{true}}
                />
              </div>
            {{/if}}
          {{/if}}
        </div>
        {{#if @problem.origin}}
          <p class='info-content-label'>Problem Origin</p>
          <div class='info-content-block origin'>
            <p><LinkTo
                @route='problems.problem'
                @model={{@problem.origin.id}}
              >{{@problem.origin.title}}</LinkTo></p>
          </div>
        {{/if}}
        {{#if this.user.isAdmin}}
          <p class='info-content-label'>Created By</p>
          <div class='info-content-block creator'>
            <p><LinkTo
                @route='users.user'
                @model={{@problem.createdBy.id}}
              >{{@problem.createdBy.username}}</LinkTo></p>
          </div>
        {{/if}}
      {{/if}}

      {{#if this.showLegal}}
        <p class='info-content-label'>Copyright Notice</p>
        <div class='info-content-block copyright'>
          {{#if @isEditing}}
            <div class='input-container' id='copyright-container'>
              <span id='icon'>&copy;</span>
              <Input
                name='copyright'
                id='copyright'
                @type='text'
                @value={{this.copyrightNotice}}
                placeholder='Add Copyright Notice'
              />
            </div>
          {{else}}
            {{#if @problem.copyrightNotice}}
              <p>&copy; {{@problem.copyrightNotice}}</p>
            {{else}}
              No Copyright Notice
            {{/if}}
          {{/if}}
        </div>
        <p class='info-content-label'>Sharing Authorization</p>
        <div class='info-content-block sharing'>
          {{#if @isEditing}}
            <div class='input-container'>
              <Input
                name='sharing'
                id='sharing'
                @type='text'
                @value={{this.sharingAuth}}
                placeholder='Add Sharing Authorization'
              />
            </div>
          {{else}}
            {{#if @problem.sharingAuth}}
              {{@problem.sharingAuth}}
            {{else}}
              No Sharing Authorization
            {{/if}}
          {{/if}}
        </div>
      {{/if}}
    </div>
  </section>

  <section class='info-actions'>
    <div class='buttons-container'>
      <span class='left-buttons'>
        {{#if @isEditing}}
          {{#unless @problem.isTrashed}}
            <button
              class='button-icon'
              type='button'
              {{on 'click' this.deleteProblem}}
            ><i class='fas fa-trash'></i></button>
          {{/unless}}
        {{else}}
          <span
            class='info-text-tip simptip-position-right simptip-smooth'
            data-tooltip='Make a Copy of this Problem'
          >
            <button
              class='button-icon'
              type='button'
              {{on 'click' this.addToMyProblems}}
            ><i class='far fa-copy'></i></button>
          </span>
          {{#unless this.user.isTeacher}}
            {{#unless @problem.isTrashed}}
              {{#if this.notFlagged}}
                {{#if this.isRecommended}}
                  <span
                    class='info-text-tip simptip-position-right simptip-smooth'
                    data-tooltip='Remove this Problem from Recommended'
                  >
                    <button
                      class='button-icon star-icon'
                      type='button'
                      {{on 'click' this.removeRecommend}}
                    >
                      <i class='fas fa-star star-filled'></i>
                    </button>
                  </span>
                {{else}}
                  <span
                    class='info-text-tip simptip-position-right simptip-smooth'
                    data-tooltip='Add this Problem to Recommended'
                  >
                    <button
                      class='button-icon star-icon'
                      type='button'
                      {{on 'click' this.checkRecommend}}
                    >
                      <i class='far fa-star star-line'></i>
                    </button>
                  </span>
                {{/if}}
              {{/if}}
            {{/unless}}
          {{/unless}}
          {{#if this.user.isTeacher}}
            {{#if this.isRecommended}}
              <button class='button-icon star-icon no-cursor' type='button'>
                <i class='fas fa-star star-filled'></i>
              </button>
            {{/if}}
          {{/if}}
        {{/if}}
      </span>
      <span class='right-buttons'>
        {{#if @isEditing}}
          <LinkTo
            @route='problems.problem'
            @model={{@problem.id}}
            class='action_button cancel-button'
            role='button'
          >
            Cancel
          </LinkTo>

          <button
            class='primary-button save'
            type='button'
            {{on 'click' this.checkPrivacy}}
          >Save</button>
        {{else}}
          {{#if this.writePermissions.canEdit}}
            {{#if @problem.isUsed}}
              {{#if this.user.isAdmin}}
                <button
                  class='primary-button edit'
                  type='button'
                  {{on 'click' this.editProblem}}
                >Edit</button>
              {{/if}}
            {{else}}
              <button
                class='primary-button edit'
                type='button'
                {{on 'click' this.editProblem}}
              >Edit</button>
            {{/if}}
          {{/if}}
          {{#unless @problem.isTrashed}}
            {{#if this.notFlagged}}
              <button
                class='primary-button assign'
                type='button'
                {{on 'click' this.toggleAssignment}}
              >Assign</button>
            {{/if}}
          {{/unless}}
        {{/if}}
        {{#if @problem.isTrashed}}
          {{#if this.user.isAdmin}}
            {{#unless @isEditing}}
              <button
                class='primary-button restore'
                type='button'
                {{on 'click' this.restoreProblem}}
              >Restore</button>
            {{/unless}}
          {{/if}}
        {{/if}}
      </span>
    </div>
  </section>
  {{#if this.isMissingRequiredFields}}
    <Ui::ErrorBox
      @error='Please fill in all required fields'
      @showDismiss={{true}}
    />
  {{/if}}

  {{#each this.errors as |error|}}
    <Ui::ErrorBox
      @error={{error}}
      @showDismiss={{true}}
      @resetError={{this.resetErrors}}
    />
  {{/each}}

  {{outlet}}
</div>