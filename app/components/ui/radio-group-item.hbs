<div class='radio-group-item'>
  <label class={{if @noWidth 'no-width'}}>
    <input
      type='radio'
      checked={{(is-equal @selectedValue @value)}}
      required={{@isRequired}}
      name={{@name}}
      value={{@value}}
      {{on 'click' (fn @onClick @value)}}
    />
    <span>
      {{@label}}
      {{#if @moreInfo}}
        <span
          class='simptip-position-right simptip-smooth'
          data-tooltip='{{@moreInfo}}'
        >
          <i class='far fa-question-circle info-icon'></i>
        </span>
      {{/if}}
    </span>
  </label>
</div>