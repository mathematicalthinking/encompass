<div class='checkbox-list'>
  {{#if @items}}
    {{#if @header}}
      <p class='checkbox-list-label'>{{@header}}</p>
    {{/if}}
  {{/if}}

  <ul>
    {{#if @items}}
      <li class='toggle-all'>
        <input
          type='checkbox'
          checked={{this.isToggleAll}}
          {{on 'click' this.onToggleAll}}
        />
        <label>{{this.selectAllLabel}}</label>
      </li>
    {{/if}}
    {{#each @items as |item|}}
      <li>
        <Ui::CheckboxListItem
          @item={{item}}
          @selectedItems={{this.selectedItems}}
          @displayProp={{@itemDisplayProp}}
          @onSelect={{this.onItemSelect}}
          @name={{@inputName}}
        />
      </li>
    {{else}}
      <li>{{@noItemsMessage}}</li>
    {{/each}}
  </ul>
</div>