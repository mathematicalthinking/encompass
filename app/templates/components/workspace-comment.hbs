<li class={{this.commentClasses}}>
<div class='comment-flex-item text'>
  <p>
    {{#if this.isForCurrentWorkspace}}
      <LinkTo
        @route='workspace.submissions.submission.selections.selection'
        @models={{array
          @comment.selection.submission
          @comment.selection
        }}
        class='comment comment-text'
      >
        {{@comment.text}}
      </LinkTo>
    {{else}}
      <a
        class='newWindow comment-text'
        target='_blank'
        href='{{@comment.selection.link}}'
        rel='noopener noreferrer'
      >{{@comment.text}}</a>
    {{/if}}
  </p>
  <p class='meta'>
    by
    <span class='creator'>
      {{#if @isParentWorkspace}}
        {{@comment.originalComment.createdBy.username}}
      {{else}}
        {{@comment.createdBy.username}}
      {{/if}}
    </span>
    in
    <span class='workspace'>
      {{#if @isParentWorkspace}}
        {{@comment.originalComment.workspace.name}}
      {{else}}
        {{@comment.workspace.name}}
      {{/if}}
    </span>
  </p>
</div>
<div class='comment-flex-item actions'>
  {{#if this.canDelete}}
    <span {{on "click" (fn this.deleteComment @comment)}} class='delete_button'><i
        class='fas fa-minus-circle'
      ></i></span>
  {{/if}}
  {{#if this.permittedToComment}}
    <a {{on "click" (fn this.reuseComment @comment)}} title='reuse this comment'>
      {{#if this.childrenLength}}
        {{this.childrenLength}}
      {{else}}
        <i class='fas fa-plus'></i>
      {{/if}}
    </a>
  {{/if}}
</div>

<div class='clear'></div>
</li>