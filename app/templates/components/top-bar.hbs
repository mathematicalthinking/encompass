{{#link-to "index"}}
  <h1 id="encompass-logo" class="{{unless isSmallHeader "al_logo"}}">Drexel |
    EnCoMPASS</h1>
{{/link-to}}

<div class="clear_r"></div>

{{#if user.isAuthenticated}}
  <nav id="al_nav">
    <div id="menu-toggle">
      <ul id="main-nav">
        <span id="menu-items">
          {{! My Work / Homepage Button }}
          <li id="home-btn">
            <div class="dropdown-skinny">
              {{#link-to "index" classNames="menu home"}}my work{{/link-to}}
            </div>
          </li>
          {{! Make Button }}
          {{#unless isStudent}}
            <li>
              <div class="dropdown dropdown-skinny">
                {{#link-to "index" classNames="menu workspaces"}}
                  make
                  <i class="fa fa-caret-down caret-down"></i>
                {{/link-to}}
                <div class="dropdown-content">
                  {{#link-to
                    "assignments.new"
                    classNames="menu workspaces-new"
                  }}
                    assignment
                  {{/link-to}}
                  {{!-- {{#if notStudent}} --}}
                  <div class="parent-dropdown">
                    <div class="dropdown dropdown-skinny">
                      {{#link-to
                        "workspaces.new"
                        classNames="menu import"
                      }}workspace<i
                          class="fa fa-caret-right caret-right spacing"
                        ></i>{{/link-to}}
                    </div>
                    <div
                      id="dropdown-hidden"
                      class="dropdown-content dropdown-right dropdown-hidden"
                    >
                      {{#link-to
                        "workspaces.new"
                        classNames="menu workspaces-new"
                      }}new{{/link-to}}
                      {{!-- {{#if notStudent}} --}}
                      {{#link-to
                        "import"
                        classNames="menu import"
                      }}import{{/link-to}}
                      {{#link-to
                        "workspaces.copy"
                        classNames="menu import"
                      }}copy{{/link-to}}
                      {{#link-to
                        "vmt.import"
                        classNames="menu vmt-import"
                      }}vmt{{/link-to}}
                      {{!-- {{/if}} --}}
                    </div>
                  </div>
                  {{#link-to
                    "problems.new"
                    classNames="menu import"
                  }}problem{{/link-to}}
                  {{#link-to
                    "sections.new"
                    classNames="menu sections"
                  }}class{{/link-to}}
                  {{#link-to
                    "users.new"
                    classNames="menu vmt-import"
                  }}users{{/link-to}}

                  {{!-- {{/if}} --}}
                </div>
              </div>
            </li>
          {{/unless}}
          {{! Do Button }}
          <li>
            <div class="dropdown dropdown-wide">
              {{#link-to "index" classNames="menu workspaces"}}do<i
                  class="fa fa-caret-down caret-down"
                ></i>{{/link-to}}
              <div class="dropdown-content">
                {{#link-to "assignments" classNames="menu problems"}}solve a
                  problem{{/link-to}}
                {{#link-to "workspaces" classNames="menu workspaces"}}review
                  submitted work{{/link-to}}
                {{#link-to "responses" classNames="menu workspaces"}}mentor
                  submissions{{/link-to}}
                {{#unless isStudent}}
                  {{#link-to "sections" classNames="menu sections"}}manage
                    classes{{/link-to}}
                  {{#link-to "users" classNames="menu users"}}manage users{{/link-to}}
                {{/unless}}
              </div>
            </div>
          </li>
          {{! Find Button }}
          <li>
            <div class="dropdown dropdown-skinny">
              {{#link-to "index" classNames="menu workspaces"}}find<i
                  class="fa fa-caret-down caret-down"
                ></i>{{/link-to}}
              <div class="dropdown-content">
                {{#link-to
                  "assignments"
                  classNames="menu workspaces-new"
                }}assignment{{/link-to}}
                {{#link-to
                  "workspaces"
                  classNames="menu import"
                }}workspace{{/link-to}}
                {{#link-to
                  "problems"
                  classNames="menu import"
                }}problem{{/link-to}}
                {{#link-to
                  "sections.home"
                  classNames="menu sections"
                }}class{{/link-to}}
                {{#unless isStudent}}
                  {{#link-to
                    "users"
                    classNames="menu vmt-import"
                  }}users{{/link-to}}
                {{/unless}}
              </div>
            </div>
          </li>
          <li id="logout-btn">{{#link-to "logout" classNames="menu logout"}}<i
                class="fas fa-power-off logout-icon"
              ></i><span id="logout-text">log out</span>{{/link-to}}</li>
        </span>
        {{#unless isStudentAccount}}
          <li id="role-toggle">
            <span class="acting-role">Role: {{user.actingRoleName}}</span>
            <span class="toggle-role" {{action "showToggleModal"}}>
              <i class="fas fa-sync-alt"></i>
            </span>
          </li>
        {{/unless}}
        <li id="current-username">
          {{#link-to "user" currentUser.username}}<img
              src={{currentUser.avatar}}
              alt={{currentUser.username}}
            />{{/link-to}}
        </li>
        <li id="user-image">
          {{input
            type="checkbox"
            id="menu-button"
            name="menu-toggle"
            checked=openMenu
            click=(action "toggleMenu")
          }}
          <img src={{user.avatar}} alt="" />
          {{#if newNotifications}}
            {{circle-ntf displayCount=newNotifications.length}}
          {{/if}}
        </li>
      </ul>
    </div>
  </nav>

  <div id="hide-menu" class="hidden animated">
    <ul>
      <li>{{#link-to "index"}}home{{/link-to}}</li>
      <li>{{#link-to "assignments.home"}}assignments{{/link-to}}</li>
      {{#unless currentUser.isStudent}}
        <li>{{#link-to "problems"}}problems{{/link-to}}</li>
      {{/unless}}
      <li>{{#link-to "sections.home"}}classes{{/link-to}}</li>
      {{!-- {{#unless currentUser.isStudent}} --}}
      <li>{{#link-to "workspaces"}}workspaces{{/link-to}}</li>
      {{!-- {{/unless}} --}}
      {{#unless currentUser.isStudent}}
        <li>{{#link-to "import"}}import{{/link-to}}</li>
      {{/unless}}
      <li>{{#link-to "responses"}}responses{{/link-to}}
        {{#if responseNotifications}}
          {{circle-ntf displayCount=responseNotifications.length}}
        {{/if}}
      </li>
      {{#unless currentUser.isStudent}}
        <li>{{#link-to "users.home"}}users{{/link-to}}</li>
      {{/unless}}
      <li id="logout-btn-side">{{#link-to "logout"}}logout{{/link-to}}</li>
    </ul>
  </div>

{{else}}
  <nav id="topbar-unauth">
    <ul>
      {{!-- <li>{{#link-to 'index' classNames='menu home'}}home{{/link-to}}</li> --}}
      <li data-test="login">{{#link-to
          "auth.login"
          classNames="menu login hidden"
        }}log in{{/link-to}}</li>
      <li data-test="signup">{{#link-to
          "auth.signup"
          classNames="menu signup"
        }}sign up{{/link-to}}</li>
    </ul>
  </nav>
{{/if}}

<script>
  $('#menu-button').click(function (e) { e.stopPropagation();
  $('#hide-menu').toggleClass('sidemenu-style');
  $('#hide-menu').addClass('slideInRight'); }); $('#hide-menu').click(function
  (e) { e.stopPropagation(); }); $('body,html').click(function (e) {
  $('#hide-menu').removeClass('sidemenu-style'); });
  $('#hide-menu>li>a').ready(() => { $('#hide-menu').click(function (e) {
  $('#hide-menu').removeClass('sidemenu-style'); }); })
</script>