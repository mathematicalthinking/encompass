<div id='responses-list'>
  <div class='flex-container-full'>
    <div class='flex-item-full filter-options collapse' id='filter-list-side'>
    </div>

    <div class='flex-item-full list-view'>
      <div class='list-container'>
        <div class='top-row'>
          <h1 class='heading'>Responses</h1>
        </div>
      </div>
      <div class='results-list'>
        <div class='results-info'>
          <div class='results-icons' id='response-list-tabs'>

            {{#if this.showSubmitterTab}}
              <span
                {{on 'click' this.showSubmitterResponses}}
                class='submitter {{if this.isShowSubmitter "active-filter"}}'
              >
                Solver
                {{this.submitterCounter}}
              </span>
            {{/if}}
            {{#if this.showMentoringTab}}
              <span
                {{on 'click' this.showMentoringResponses}}
                class='mentoring {{if this.isShowMentoring "active-filter"}}'
              >
                Mentoring
                {{this.mentoringCounter}}
              </span>
            {{/if}}
            {{#if this.showApprovingTab}}
              <span
                {{on 'click' this.showApprovingResponses}}
                class='approving {{if this.isShowApproving "active-filter"}}'
              >
                Approving
                {{this.approvingCounter}}
              </span>
            {{/if}}
            {{#if this.showAllFilter}}
              <span
                {{on 'click' this.showAllResponses}}
                class='all {{if this.isShowAll "active-filter"}}'
              >
                All
              </span>
            {{/if}}
          </div>
          <div class='side-icons'>
            <i
              class='fas fa-redo-alt refresh-icon'
              {{on 'click' this.refreshList}}
              title='Refresh Responses list'
            ></i>
          </div>
        </div>
        <div class='results-items' id='layout-view'>
          <div class='sort-bar'>
            {{#if this.showStudentHeader}}
              <div class='sort-bar-item student'>
                <span>Student</span>
              </div>
            {{/if}}
            <div class='sort-bar-item workspace'>
              <span>Workspace</span>
            </div>
            <div class='sort-bar-item submission-date'>
              <span>Latest Revision Date</span>
            </div>
            <div class='sort-bar-item problem'>
              <span>Problem</span>
            </div>
            {{! <div class="sort-bar-item brief-summary">
                <span>Brief Summary</span>
              </div> }}
            {{#if this.showMentorHeader}}
              <div class='sort-bar-item mentor'>
                <span>Mentor</span>
              </div>
            {{/if}}
            <div class='sort-bar-item reply-date'>
              <span>Latest Reply Date</span>
            </div>
            <div class='sort-bar-item status'>
              <span>Status</span>
            </div>
          </div>

          <div class='main-list'>
            {{#each this.displayThreads as |thread|}}
              <ResponseSubmissionThread
                @showStudent={{this.showStudentHeader}}
                @showMentor={{this.showMentorHeader}}
                @thread={{thread}}
              />
            {{else}}
              <div class='no-results-container'>
                <p class='notice'>{{this.noResponsesMessage}}</p>
              </div>
            {{/each}}
            {{#if this.displayThreads}}
              <PaginationControl
                @details={{this.currentMetadata}}
                @initiatePageChange={{this.initiatePageChange}}
              />
            {{/if}}
          </div>
        </div>
      </div>
    </div>

  </div>
</div>