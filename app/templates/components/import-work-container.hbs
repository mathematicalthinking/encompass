<div class='flex-container-full'>
  <div class='flex-item-full filter-options collapse' id='filter-list-side'>
    <div class='filter-items'>
      <h2>Summary</h2>
      <ul class='primary-filter-list'>
        {{#each detailsItems as |item|}}
          <DetailsListItem
            @label={{item.label}}
            @displayValue={{item.displayValue}}
            @emptyValue={{item.emptyValue}}
            @propName={{item.propName}}
            @children={{item.children}}
            @isArray={{item.isArray}}
            @editValue={{action 'goToStep'}}
            @associatedStep={{item.associatedStep}}
            @currentStep={{currentStep.value}}
          />
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='flex-item-full list-view'>
    <div class='results-list'>
      <div class='header'>
        <h1>Import Work</h1>
      </div>

      <div class='step-display'>
        <div class='container'>
          <ul class='progressbar'>
            <li class='step-1 active-step'>
              <span>Select Problem</span>
            </li>
            <li
              class='step-2
                {{if (greater-equal currentStep.value 2) "active-step"}}'
            >
              <span>Select Class</span>
            </li>
            <li
              class='step-3
                {{if (greater-equal currentStep.value 3) "active-step"}}'
            >
              <span>Upload Files</span>
            </li>
            <li
              class='step-4
                {{if (greater-equal currentStep.value 4) "active-step"}}'
            >
              <span>Match Students</span>
            </li>
            <li
              class='step-5
                {{if (greater-equal currentStep.value 5) "active-step"}}'
            >
              <span>Create Workspace</span>
            </li>
            <li
              class='step-6
                {{if (greater-equal currentStep.value 6) "active-step"}}'
            >
              <span>Review</span>
            </li>
          </ul>
        </div>
      </div>

      <div class='step-content'>
        {{#if showSelectProblem}}
          <ImportWorkStep1
            @store={{this.store}}
            @selectedProblem={{selectedProblem}}
            @onProceed={{action 'setSelectedProblem'}}
          />
        {{/if}}

        {{#if showSelectClass}}
          <ImportWorkStep2
            @store={{this.store}}
            @selectedSection={{selectedSection}}
            @selectedValue={{selectedValue}}
            @onBack={{action 'changeStep'}}
            @onProceed={{action 'setSelectedSection'}}
          />
        {{/if}}

        {{#if showUploadFiles}}
          <ImportWorkStep3
            @store={{this.store}}
            @selectedProblem={{selectedProblem}}
            @selectedSection={{selectedSection}}
            @onBack={{action 'changeStep'}}
            @onProceed={{action 'setUploadedFiles'}}
            @existingAnswers={{answers}}
            @uploadedFiles={{uploadedFiles}}
          />
        {{/if}}

        {{#if showMatchStudents}}
          <ImportWorkStep4
            @store={{this.store}}
            @uploadedFiles={{uploadedFiles}}
            @answers={{answers}}
            @selectedProblem={{selectedProblem}}
            @studentMap={{studentMap}}
            @selectedSection={{selectedSection}}
            @onBack={{action 'changeStep'}}
            @onProceed={{action 'setMatchedStudents'}}
          />
        {{/if}}

        {{#if showCreateWs}}
          <ImportWorkStep5
            @currentUser={{this.currentUser.user}}
            @users={{users}}
            @selectedOwner={{selectedOwner}}
            @selectedFolderSet={{selectedFolderSet}}
            @createAssignmentValue={{createAssignmentValue}}
            @doCreateWs={{doCreateWs}}
            @selectedMode={{selectedMode}}
            @folderSets={{folderSets}}
            @store={{this.store}}
            @uploadedFiles={{uploadedFiles}}
            @answers={{answers}}
            @selectedProblem={{selectedProblem}}
            @selectedSection={{selectedSection}}
            @workspaceName={{workspaceName}}
            @workspaceOwner={{workspaceOwner}}
            @workspaceMode={{workspaceMode}}
            @folderSet={{folderSet}}
            @assignmentName={{assignmentName}}
            @onBack={{action 'changeStep'}}
            @onProceed={{action 'prepareReview'}}
          />
        {{/if}}

        {{#if showReview}}
          <ImportWorkStep6
            @store={{this.store}}
            @uploadedFiles={{uploadedFiles}}
            @answers={{answers}}
            @selectedProblem={{selectedProblem}}
            @selectedSection={{selectedSection}}
            @submissionCount={{submissionCount}}
            @workspaceName={{workspaceName}}
            @workspaceOwner={{workspaceOwner}}
            @workspaceMode={{workspaceMode}}
            @folderSet={{folderSet}}
            @assignmentName={{assignmentName}}
            @savingAssignment={{savingAssignment}}
            @isUploadingAnswer={{isUploadingAnswer}}
            @isCreatingWorkspace={{isCreatingWorkspace}}
            @uploadedAnswers={{uploadedAnswers}}
            @createdWorkspace={{createdWorkspace}}
            @createdAssignment={{createdAssignment}}
            @onBack={{action 'changeStep'}}
            @onProceed={{action 'importWork'}}
          />
        {{/if}}
      </div>

      {{#each findRecordErrors as |error|}}
        <Ui::ErrorBox @error={{error}} @showDismiss={{true}} />
      {{/each}}
      {{#each postErrors as |error|}}
        <Ui::ErrorBox @error={{error}} @showDismiss={{true}} />
      {{/each}}
      {{#each createAnswerErrors as |error|}}
        <Ui::ErrorBox @error={{error}} @showDismiss={{true}} />
      {{/each}}
    </div>
  </div>
</div>

<div class='toggle-filter-menu'>
  <button type='button' {{action 'toggleMenu'}}><i
      id='arrow-icon'
      class='fas fa-chevron-right'
    ></i></button>
</div>