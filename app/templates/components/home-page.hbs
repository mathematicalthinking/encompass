{{#if user.isStudent}}
  <div id="welcome"  class="al_wtf home header-home">
    <h1>Welcome student, {{user.displayName}}!</h1>
        <h1 class="header-home header-font">My Work Landing Page</h1>
        {{dashboard-assignments-list store=store user=user assignments=assignments}}

        {{dashboard-workspaces-list store=store user=user workspaces=workspaces assignments=assingments}}
        {{!-- <h2 class="header-home">{{#link-to 'responses'}} Mentoring/Approving{{/link-to}}</h2> --}}
  </div>


{{else}}
 <div id="welcome" class="al_wtf home  header-home">
  {{#if user.isAuthenticated}}
    <h1 class="header-home">My Work Landing Page</h1>
    <span class="toggle-role" {{action 'showToggleModal' }}>
      <span class="header-home al_wtf_link">Problems to Solve (switch to student role)</span>
    </span>

    {{dashboard-workspaces-list store=store user=user workspaces=workspaces assignments=assignments}}

    {{dashboard-classes-list store=store user=user sections=sections}}
    {{!-- <h2 class="header-home">{{#link-to 'responses'}} Mentoring/Approving{{/link-to}}</h2> --}}
    <p class="footer">EnCoMPASS version 2.7.0 last updated on 03/30/2021.</p>
  {{else}}
    <h2>It looks like you are not logged in</h2>
    <p>Please login <a href="#/auth/login">here</a></p>
    <p>New to EnCoMPASS, sign up <a href="#/auth/signup">here</a></p>
  {{/if}}
</div>

{{/if}}
