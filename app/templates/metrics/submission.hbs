<header>
  <h3>{{this.model.student}}'s Submission</h3>
</header>
<p><LinkTo @route="metrics">back</LinkTo></p>
<div class="metrics__container">
  <div class="metrics__container metrics--flex">
    <button {{on "click" (fn this.handleToggle "showSelections")}} class="primary-button" type="button">Report Selections</button>
    <button {{on "click" (fn this.handleToggle "showFolders")}} class="primary-button" type="button">Report Folders</button>
    <button {{on "click" (fn this.handleToggle "showComments")}} class="primary-button" type="button">Report Comments</button>
    <button {{on "click" (fn this.handleToggle "showResponses")}} class="primary-button" type="button">Report Responses</button>
  </div>
  <div class="metrcis__container">
  {{#if this.showSelections}}
    <p>selections</p>
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            selected text
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model.selections as |selection|}}
          <tr>
            <td>{{selection.text}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  {{#if this.showFolders}}
    <p>Folders</p>
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            Label
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model.folders as |folder|}}
          <tr>
            <td>{{folder.name}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  {{#if this.showComments}}
    <p>Comments</p>
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            Created By
          </th>
          <th>
            Label
          </th>
          <th>
            Text
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model.comments as |comment|}}
          <tr>
            <td>{{comment.createdBy.username}}</td>
            <td>{{comment.label}}</td>
            <td>{{comment.text}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  {{#if this.showResponses}}
    <p>Created By</p>
    <table class="metrics__table">
      <thead>
        <tr>
          <th>
            Created By
          </th>
          <th>
            Text
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model.responses as |response|}}
          <tr>
            <td>{{response.createdBy.username}}</td>
            <td>{{make-html-safe response.text}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  </div>
  <div class="metrics__container" id="submission">
    <div class="metrics__card">
    <h3>answer</h3>
      <p>{{make-html-safe this.answer}}</p>
    </div>
    <div class="metrics__card">
    <h3>explanation</h3>
      <p>{{make-html-safe this.explanation}}</p>
    </div>
  </div>
</div>
<p><LinkTo @route="metrics">back</LinkTo></p>